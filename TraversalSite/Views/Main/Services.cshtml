@model List<Destination>
@{
    ViewData["Title"] = "Services";
    Layout = "~/Views/Shared/_UILayout.cshtml";
}

<section class="grids-1 py-5">
    <div class="grids py-lg-5 py-md-4">
        <div class="container">
            <h3 class="hny-title mb-5">Rotalarımız</h3>
            <div class="row">
                
                @foreach (var dest in Model)
                {
                    <div class="col-lg-4 col-md-4 col-6">
                        <div class="column">
                            <a href="~/Main/Single/@dest.DestinationId"><img src="~/Tra/assets/images/@dest.Image" alt="" class="img-fluid"></a>
                            <div class="info">
                                <h4><a href="~/Main/Single/@dest.DestinationId">@dest.City</a></h4>
                                <p>@dest.DayNight </p>
                                <div class="dst-btm">
                                    <h6 class="">Başlayan Fiyatlarla </h6>
                                    <span>@dest.Price₺</span>
                                </div>
                            </div>
                        </div>
                    </div>
                }
               
            </div>
        </div>
    </div>
</section>

