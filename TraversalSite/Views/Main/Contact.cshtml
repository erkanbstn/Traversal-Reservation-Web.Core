
@{
    ViewData["Title"] = "Contact";
    Layout = "~/Views/Shared/_UILayout.cshtml";
}
    <section class="w3l-about-breadcrumb text-left">
        <div class="breadcrumb-bg breadcrumb-bg-about py-sm-5 py-4">
            <div class="container py-2">
                <h2 class="title">Bize Ulaşın</h2>
                <ul class="breadcrumbs-custom-path mt-2">
                    <li><a href="~/Main/Index">Ana Sayfa</a></li>
                    <li class="active"><span class="fa fa-arrow-right mx-2" aria-hidden="true"></span> İletişim </li>
                </ul>
            </div>
        </div>
    </section>
    <!-- //about breadcrumb -->
    <!-- contact-form -->
    <section class="w3l-contact" id="contact">
        <div class="contact-infubd py-5">
            <div class="container py-lg-3">
                <div class="contact-grids row">
                    <div class="col-lg-6 contact-left">
                        <div class="partners">
                            <div class="cont-details">
                                <h5>Bize Ulaşın</h5>
                                <p class="mt-3 mb-4">
                                    Merhaba, Biz 7/24 Ulaşılabiliriz. 
                                    <br />
                                    Bize Email veya Telefon Üzerinden Ulaşabilirsiniz
                                    <br />
                                    Mesaj Bırakın Size Ulaşalım.
                                </p>
                            </div>
                            <div class="hours">
                                <h6 class="mt-4">Email:</h6>
                                <p>
                                <a href="erkanbstn34@gmail.com">
                                        erkanbstn34@gmail.com
                                    </a>
                                </p>
                                <h6 class="mt-4">Visit Us:</h6>
                                <p> Istanbul</p>
                                <h6 class="mt-4">Contact:</h6>
                            <p class="margin-top"><a href="tel:+90(536)-321-72-19">+90(536)-321-72-19</a></p>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-6 mt-lg-0 mt-5 contact-right">
                        <form method="post" class="signin-form">
                            <div class="input-grids">
                                <div class="form-group">
                                    <input type="text" name="w3lName" id="w3lName" placeholder="Adınız*" class="contact-input" />
                                </div>
                                <div class="form-group">
                                    <input type="email" name="w3lSender" id="w3lSender" placeholder="Email*" class="contact-input" required="" />
                                </div>
                                <div class="form-group">
                                    <input type="text" name="w3lSubect" id="w3lSubect" placeholder="Konu*" class="contact-input" />
                                </div>
                            </div>
                            <div class="form-group">
                                <textarea name="w3lMessage" id="w3lMessage" placeholder="Mesajınız*" required=""></textarea>
                            </div>
                            <div class="text-right">
                                <button class="btn btn-style btn-primary">Mesaj Gönder</button>
                            </div>
                        </form>
                    </div>

                </div>
                <div class="map mt-5 pt-md-5">
                    <h5>Harita</h5>

                <iframe src="https://www.google.com/maps/embed?pb=!1m17!1m12!1m3!1d3012.1925652575474!2d28.724927076358895!3d40.977264021333525!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m2!1m1!2zNDDCsDU4JzM4LjEiTiAyOMKwNDMnMzkuMCJF!5e0!3m2!1str!2str!4v1681699850998!5m2!1str!2str" width="600" height="450" style="border:0;" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe>
                </div>
            </div>
    </section>

  