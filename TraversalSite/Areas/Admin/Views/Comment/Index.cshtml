@model List<Comment>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container-xxl flex-grow-1 container-p-y">
    <h4 class="fw-bold py-3 mb-4"><span class="text-muted fw-light">Sayfalar/</span>Yorumlar</h4>
    <div class="row">
        <div class="card">
            <h5 class="card-header">Yorumlar</h5>
            <div class="table-responsive text-nowrap">
                <br />
                <a href="~/Admin/Comment/AddComment" class="btn btn-danger">Yeni Yorum Ekle</a>
                <br />
                <br />
                <table class="table">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Kişi</th>
                            <th>Rota</th>
                            <th>Tarih</th>
                            <th>Durum</th>
                            <th colspan="2" style="text-align:center">Aksiyon</th>
                        </tr>
                    </thead>
                    <tbody class="table-border-bottom-0">
                        @foreach (var com in Model)
                        {
                            <tr>
                                <td><span>@com.CommentId</span></td>
                                <td><span>@com.AppUser.Name</span></td>
                                <td><span>@com.Destination.City</span></td>
                                <td><span>@Convert.ToDateTime(com.CommentDate).ToString("dd/MM/yyyy")</span></td>
                                @if (com.Status == true)
                                {
                                    <td><span class="badge bg-label-success me-1">Aktif</span></td>
                                    <td><span><a href="~/Admin/Destination/ChangeDestinationStatus/0/@com.CommentId" class="btn btn-warning">Pasif Yap</a></span></td>
                                }
                                else
                                {
                                    <td><span class="badge bg-label-danger me-1">Pasif</span></td>
                                    <td><span><a href="~/Admin/Destination/ChangeDestinationStatus/1/@com.CommentId" class="btn btn-success">Aktif Yap</a></span></td>

                                }
                                <td><span><a href="~/Admin/Destination/UpdateDestination/@com.CommentId" class="btn btn-primary">Düzenle</a></span></td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>

        <hr class="my-5" />
    </div>
</div>
