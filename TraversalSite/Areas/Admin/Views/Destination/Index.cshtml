@model List<Destination>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}




<div class="container-xxl flex-grow-1 container-p-y">
    <h4 class="fw-bold py-3 mb-4"><span class="text-muted fw-light">Sayfalar/</span>Rotalar</h4>
    <div class="row">
        <div class="card">
            <h5 class="card-header">Rotalar</h5>
            <div class="table-responsive text-nowrap">
                <br />
                <a href="~/Admin/Destination/AddDestination" class="btn btn-danger">Yeni Rota Ekle</a>
                <br />
                <br />
                <table class="table">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Şehir</th>
                            <th>Görsel</th>
                            <th>Gün</th>
                            <th>Fiyat</th>
                            <th>Kontenjan</th>
                            <th colspan="2" style="text-align:center">Durum</th>
                            <th>Aksiyon</th>
                            <th>Sitede Gör</th>
                        </tr>
                    </thead>
                    <tbody class="table-border-bottom-0">
                        @foreach (var dest in Model)
                        {
                            <tr>
                                <td><span>@dest.DestinationId</span></td>
                                <td><span>@dest.City</span></td>
                                <td><span><img src="~/Tra/assets/images/@dest.Image" width="120px" height="120px" /></span></td>
                                <td><span>@dest.DayNight</span></td>
                                <td><span>@dest.Price</span></td>
                                <td><span>@dest.Capacity</span></td>
                                @if (dest.Status == true)
                                {
                                    <td><span class="badge bg-label-success me-1">Aktif</span></td>
                                    <td><span><a href="~/Admin/Destination/ChangeDestinationStatus/0/@dest.DestinationId" class="btn btn-warning">Pasif Yap</a></span></td>
                                }
                                else
                                {
                                    <td><span class="badge bg-label-danger me-1">Pasif</span></td>
                                    <td><span><a href="~/Admin/Destination/ChangeDestinationStatus/1/@dest.DestinationId" class="btn btn-success">Aktif Yap</a></span></td>

                                }
                                <td><span><a href="~/Admin/Destination/UpdateDestination/@dest.DestinationId" class="btn btn-primary">Düzenle</a></span></td>
                                <td><span><a href="~/Main/Single/@dest.DestinationId" class="btn btn-outline-secondary">Siteye Git</a></span></td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>

        <hr class="my-5" />
    </div>
</div>


